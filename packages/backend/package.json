{
    "name": "games-server",
    "version": "1.0.0",
    "description": "",
    "main": "app.ts",
    "scripts": {
        "dev": "pnpm run types && tsc-watch --onSuccess \"pnpm start\"",
        "build": "([ ! -d dist ] || rm -r dist) && tsc",
        "lint": "eslint .",
        "pretty": "prettier . --write",
        "start": "node ./dist/app.js",
        "types:database": "npx supabase login --token $(node -e 'require(\"dotenv\").config(); console.log(process.env.SUPABASE_ACCESS_TOKEN)') && npx supabase gen types --lang=typescript --project-id $(node -e 'require(\"dotenv\").config(); console.log(process.env.SUPABASE_PROJECT_ID)') > utils/types/database.types.ts",
        "types": "pnpm run types:database"
    },
    "engines": {
        "node": "^20.9.0"
    },
    "engineStrict": true,
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@supabase/supabase-js": "^2.45.3",
        "common": "workspace:*",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "ioredis": "^5.4.1",
        "socket.io": "^4.7.5"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/node": "^22.1.0",
        "@types/node-cron": "^3.0.11",
        "@typescript-eslint/eslint-plugin": "^8.0.1",
        "@typescript-eslint/parser": "^8.0.1",
        "eslint": "^9.8.0",
        "eslint-plugin-prettier": "^5.2.1",
        "prettier": "^3.3.3",
        "ts-node": "^10.9.2",
        "tsc-watch": "^6.2.0",
        "typescript": "^5.5.4"
    }
}
